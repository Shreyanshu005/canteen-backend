                {
                    "name": "Send OTP",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"role\": \"user\" // optional: \"canteen_owner\" or \"admin\"\n}",
